<div id= "mainreview">
  <h1>Leave Your Review</h1>

  <form id="reviews" action="/reviews/create" method="POST">
    <label>Name</label>
    <input type="text" name="name" {{this.name}}>
    <label>Recipe</label>
    <input type="text" name="recipe" {{this.recipe}}>
    <label>Cuisine</label>
    <input type="text" name="cuisine" {{this.cuisine}}>
    <label>Review</label>
    <input type="text" name="review" {{this.review}}>
    <label>Rating</label>
    <input type="number" name="rating" {{this.rating}}>
    <button type="submit">Send</button>
  </form>

</div>
