<h2>Add a New Recipe To the Database</h2>

<form action="/createrecipe" method="POST" enctype="multipart/form-data">

    <div>
        <label>Name</label>
        <input type="text" name="theName">
    </div>
    
    <div>
        <label>Date</label>
        <input type="date" name="theDate">
    </div>

    <div>
        <label>Servings</label>
        <input type="string" name="theServings">
    </div>

    <div>
        <label>Type Of Food</label>
        <input type="string" name="foodType">
    </div>

    <div>
        <label>List of Ingredients</label>
        <input type="string" name="ingList">
    </div>

    <div>
        <label>Steps to Cooking</label>
        <input type="string" name="cookingSteps">
    </div>

    <div>
        <label>Recipe Photo</label>
        <input type="file" name="recImage" accept="image/*">
    </div>
    


        <button>Submit Recipe</button>
</form>